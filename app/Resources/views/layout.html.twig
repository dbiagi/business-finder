{% extends 'base.html.twig' %}

{% block body %}
    {% block navbar %}
        {% include 'blocks/navbar.html.twig' %}
    {% endblock %}

    <div class="container">
        {% block flash_messages %}
            {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                    <div class="message">
                        <p class="{{ type }}">{{ message }}</p>
                    </div>
                {% endfor %}
            {% endfor %}
        {% endblock %}

        {% block content %}{% endblock %}
    </div>
{% endblock %}
